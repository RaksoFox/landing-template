---

interface Props {
  title: string;
}

const {title} = Astro.props;

---
<div class="mt-8 md:mt-16 flex justify-center">
  <div
      class="mx-4 grow max-w-7xl flex flex-col flex-wrap gap-4 rounded-3xl border-2 border-accent-blue bg-gradient-to-br from-blue-600/20 to-blue-500/20 backdrop-blur-xl px-6 pt-4 pb-6">
    <h1 class="font-bold text-4xl">{title}</h1>
    <slot/>

  </div>
</div>